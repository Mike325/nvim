# Override csh-snippets file

priority 1

snippet if "if ... then (if)"
if ( ${1:condition} ) then
	${0:${VISUAL:#statements}}
endif
endsnippet

snippet elif "else if ..."
else if ( ${1:condition} ) then
	${0:${VISUAL:#statements}}
endsnippet

snippet case "case .. esac"
switch (${1:condition})
	case "${2:pattern}":
		${0:${VISUAL:#statements}}
		breaksw
endsw
endsnippet

snippet for "foreach ... end"
foreach i (${1:sequence})
	${0:${VISUAL:#statements}}
end
endsnippet

snippet while "while ... end"
while (${1:condition})
	${0:${VISUAL:#statements}}
end
endsnippet

snippet al "alias"
alias ${1:name} "$0"
endsnippet

snippet var "Create variable"
setenv ${1:name} "$0"
endsnippet
